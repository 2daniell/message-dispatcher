{
  "name": "message-dispatcher",
  "version": "1.0.0",
  "main": "dist/ui/main/ElectronMain.js",
  "scripts": {
    "start": "electron .",
    "build:renderer": "cd src && cd ui && cd renderer && npm run build",
    "build:copy": "node scripts/copy-renderer.js",
    "build:main": "tsc",
    "build": "npm run build:renderer && npm run build:main && npm run build:copy",
    "package": "electron-builder --win"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "p-queue": "^8.1.0",
    "qrious": "^4.0.2",
    "typescript": "^5.8.3",
    "whatsapp-web.js": "^1.31.0"
  },
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.daniel.message-dispatcher",
    "productName": "Message Dispatcher",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "scripts/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "out"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Message Dispatcher"
    }
  }
}
